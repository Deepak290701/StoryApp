<h6>Dashboard</h6>
<h4>Welcome {{name}} </h4>    
<h6>Your Stories Are -> </h6>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{stories._id}}"></a>{{stories.title}}</td>
                    <td>{{stories.createdAt}}</td>
                    <td><span class="dash-status">{{stories.status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
    <p>You have not created any stories!!!</p>

{{/if}}